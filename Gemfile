  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jemoji"
  gem "jekyll-cloudinary"
  gem "jekyll-include-cache"
  gem 'kramdown'
  gem 'kramdown-parser-gfm'
  gem 'jekyll-purgecss'
end
